@using StokTakipMVC.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblMusteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>ŞEHİR</th>
        <th>BAKİYE</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.Id</td>
            <td>@ktg.Ad</td>
            <td>@ktg.Soyad</td>
            <td>@ktg.Sehir</td>
            <td>@ktg.Bakiye</td>
            <td><a href="/Musteri/MusteriSil/@ktg.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Musteri/MusteriGetir/@ktg.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa=>Url.Action("Index", new { sayfa}))
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri</a>

